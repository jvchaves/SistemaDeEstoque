<p id="notice"><%= notice %></p>
<div class="page-header">
  <h1>Movimentações</h1>
</div>


<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Produto</th>
      <th>Armazenamento</th>
      <th>Tipo</th>
      <th>Data da Movimentação</th>
      <th>Quantidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movimentacaos.each do |movimentacao| %>
      <tr>
        <td><%= movimentacao.produto.nome rescue nil %></td>
        <td><%= movimentacao.armazenamento.nome rescue nil%></td>
        <td><%= movimentacao.tipo rescue nil%></td>
        <td><%= l(movimentacao.data_movimentacao) %></td>
        <td><%= movimentacao.quantidade rescue nil%></td>
        <td>
          <%= link_to 'Vizualizar', movimentacao,:class => 'btn btn-success btn-xs' %>
          <%= link_to 'Editar', edit_movimentacao_path(movimentacao),:class => 'btn btn-primary btn-xs' %>
          <%= link_to 'Apagar', movimentacao, :class => 'btn btn-danger btn-xs',method: :delete, data: { confirm: 'Você tem certeza?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <div class="form-group col-sm-1">

    <%= link_to 'Exportar Dados',csv_exportaMovimentacao_path, method: :get, :class => 'btn btn-secondary' %>
  </div>
  <div class="form-group col-sm-1">
     <%= link_to 'Importar Dados',movimentacaos_create_by_csv_path, method: :get, :class => 'btn btn-warning' %>
  </div>
  <div class="form-group constants-list">
    <%= link_to 'Nova Movimentacao', new_movimentacao_path, :class => 'btn btn-primary' %>
  </div>

  <div class="form-group col-sm-1">
    <%=link_to 'Home', welcome_index_path, method: :get, :class => 'btn btn-default' %>
  </div>
</div>


